<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LLiveArenaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LLiveArenaWeb.styles.css" asp-append-version="true" />
</head>
<body class="app-body">
    @{
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? string.Empty;
    }
    <header class="app-header">
        <nav class="navbar navbar-expand-lg app-nav">
            <div class="container">
                <a class="navbar-brand app-brand" asp-area="" asp-page="/Index">LiveArena</a>
                <button class="navbar-toggler app-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#primaryNav"
                        aria-controls="primaryNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="primaryNav">
                    <ul class="navbar-nav ms-auto app-nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Index" ? "active" : "")" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Live" ? "active" : "")" asp-area="" asp-page="/Live">Live</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Scores" ? "active" : "")" asp-area="" asp-page="/Scores">Scores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Search" ? "active" : "")" asp-area="" asp-page="/Search">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/News" ? "active" : "")" asp-area="" asp-page="/News">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/About" ? "active" : "")" asp-area="" asp-page="/About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="header-categories">
            <div class="container">
                <div class="header-categories-list">
                    <a class="header-category" asp-page="/Scores">
                        <span class="header-category-icon">‚öΩ</span>
                        <span>Football</span>
                    </a>
                    <a class="header-category" asp-page="/Live">
                        <span class="header-category-icon">ü•ä</span>
                        <span>UFC</span>
                    </a>
                    <a class="header-category" asp-page="/Scores">
                        <span class="header-category-icon">üèí</span>
                        <span>Hockey</span>
                    </a>
                    <a class="header-category" asp-page="/Scores">
                        <span class="header-category-icon">üèÄ</span>
                        <span>Basketball</span>
                    </a>
                    <a class="header-category" asp-page="/Scores">
                        <span class="header-category-icon">üéæ</span>
                        <span>Tennis</span>
                    </a>
                    <a class="header-category" asp-page="/Scores">
                        <span class="header-category-icon">üèÅ</span>
                        <span>Formula 1</span>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <footer class="app-footer">
        <div class="container">
            &copy; @DateTime.Now.Year - LLiveArenaWeb
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>